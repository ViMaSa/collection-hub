  <body>
    <h1>Edit your collection!</h1>
  <form action="/collections/<%=collection._id%>?_method=PUT" method="POST">
    <label for="name">Name:</label>
    <input type="text" name= "name" value="<%=collection.name%>">
    <br>
    <label for="category">Category:</label>
    <input type="text" name= "category" value="<%=collection.category%>">
    <br>
    <label for="description">Description:</label>
    <input type="text" name= "description"  value="<%=collection.description%>">
    <br>
    <label for="img">Image</label>
    <input type="text" name= "img" value="<%=collection.img%>">
    <br>
    <button type="submit">Submit</button>
  </form> 
    <!-- Bootstrap Javascript -->
